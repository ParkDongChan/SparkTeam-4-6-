<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/messageItem_linearLayout_main">

    <LinearLayout
        android:id="@+id/messageItem_linearLayout_destination"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/messageItem_imageV_profile"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/messageItem_textV_name"
            android:text="이름"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="메시지"
            android:id="@+id/messageItem_textV_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:visibility="invisible"
                android:id="@+id/messageItem_textV_readCounter_L"
                android:text="1"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="12dp"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="2011.11.11 11:11"
                android:textSize="9dp"
                android:textColor="@android:color/darker_gray"
                android:id="@+id/messageItem_textV_timeStamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:visibility="invisible"
                android:id="@+id/messageItem_textV_readCounter_R"
                android:text="1"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="12dp"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>